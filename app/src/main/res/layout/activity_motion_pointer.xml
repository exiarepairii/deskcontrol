<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGraphite">

    <LinearLayout
        android:id="@+id/motionContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/motionToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <ImageButton
                android:id="@+id/motionBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/touchpad_back_button"
                android:scaleType="center"
                android:src="@drawable/ic_back"
                android:tint="@color/textSecondary" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/motionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="@string/motion_pointer_title"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/textPrimary" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/motionHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/motion_pointer_hint"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="@color/textSecondary" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/calibrationCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/surfaceGlass"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/calibrationHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/calibrationTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/motion_calibration_title"
                        android:textAppearance="?attr/textAppearanceTitleSmall"
                        android:textColor="@color/textPrimary" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/calibrationToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp"
                        android:text="@string/motion_calibration_expand"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="@color/textSecondary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/calibrationBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/calibrationSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/motion_calibration_subtitle"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/textSecondary" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/calibrationStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/empty_text"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/textSecondary" />

                    <TextView
                        android:id="@+id/labelQuickRange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/motion_calibration_quick_range" />

                    <SeekBar
                        android:id="@+id/sliderQuickRange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/labelMotionSmoothing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/motion_calibration_smoothing" />

                    <SeekBar
                        android:id="@+id/sliderMotionSmoothing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/labelMotionDeadzone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/motion_calibration_deadzone" />

                    <SeekBar
                        android:id="@+id/sliderMotionDeadzone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCalibrationReset"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/motion_calibration_reset"
                        android:textColor="@color/textPrimary"
                        app:strokeColor="@color/surfaceStroke" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/motionRecenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/motion_pointer_recenter"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />

        <FrameLayout
            android:id="@+id/motionInputArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/motion_input_bg"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/accessibilityGate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/touchpad_accessibility_content_description"
            android:src="@drawable/ic_accessibility"
            android:tint="?attr/colorOnSurfaceVariant" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/touchpad_accessibility_required"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/touchpad_accessibility_hint"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/touchpad_open_accessibility_settings" />
    </LinearLayout>
</FrameLayout>
