<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DeskControl"
            android:textAppearance="?attr/textAppearanceHeadlineSmall" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/statusLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Status"
            android:textAppearance="?attr/textAppearanceTitleSmall" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="External display: unknown"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/displayInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="No display info"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?attr/colorOutlineVariant" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mainActionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Main action"
            android:textAppearance="?attr/textAppearanceTitleSmall" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPickApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Choose app for external display" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTouchpad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="?attr/materialButtonOutlinedStyle"
            android:text="Open touchpad" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?attr/colorOutlineVariant" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/secondaryLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Secondary"
            android:textAppearance="?attr/textAppearanceTitleSmall" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDiagnostics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/Widget.Material3.Button.TextButton"
            android:text="Open diagnostics" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            style="@style/Widget.Material3.Button.TextButton"
            android:text="Settings" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/accessibilityHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Accessibility service is required for cursor and input injection."
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="?attr/materialButtonOutlinedStyle"
            android:text="Open accessibility settings" />

    </LinearLayout>
</ScrollView>
