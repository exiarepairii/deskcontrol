<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGraphite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="@color/textPrimary" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/surfaceGlass"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/external_display_label"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="@color/textSecondary" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/statusDisplayValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/external_display_not_connected"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="@color/textPrimary" />
                    </LinearLayout>

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="1dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/accessibility_label"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="@color/textSecondary" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/statusAccessibilityValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/accessibility_required"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="@color/textPrimary" />
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/displaySelector"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/display_selector_track"
                    android:padding="6dp"
                    android:visibility="gone">

                    <View
                        android:id="@+id/displaySelectorHighlight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/display_selector_highlight" />

                    <LinearLayout
                        android:id="@+id/displaySelectorRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </FrameLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPickApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/choose_app_for_display"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTouchpad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/surfaceStroke"
            android:textColor="@color/textPrimary"
            android:text="@string/open_touchpad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMotionPointer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/surfaceStroke"
            android:textColor="@color/textPrimary"
            android:text="@string/open_motion_pointer" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/surfaceStroke"
            android:textColor="@color/textPrimary"
            android:text="@string/settings" />

    </LinearLayout>
</ScrollView>
